/* pages/index/flex.wxss */
.main {
  width: 100%;
  height: 100;
}
.theme {
  border-bottom: 1px solid #000;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 1%; 
}
.items {
  display: block;
}
.item {
  width: 49%;
  height: 100rpx;
  display: inline-block;
  margin: 0 0.5%;
  border-radius: 5%;
  border-bottom: 0.1em solid #000;
  border-color: #000;
}
.item1 {
  background-color: #f0f;
}
.item2 {
  background-color: #0ff;
}
.item3 {
  background-color: #ff0;
}